<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
        <link rel="stylesheet" href="/css/style.css">
    </head>
<body>

    <%- include('../partials/header.ejs')%>

    <section id="logo">
        <div class="container-fluid mx-auto">
            <div class="row mx-auto">
                <div class="col-md-8 offset-md-2">
                    <a href="/mobile/redmi"><img src="/media/Xiaomi-redmi-logo.jpg" alt="" class="img-fluid"></a>
                    <a href="/mobile/oneplus"><img src="/media/one plus logo.jpg" alt="" class="img-fluid"></a>
                    <a href="/mobile/samsung"><img src="/media/Samsung-Logo-PNG-Photo.png" alt="" class="img-fluid"></a>
                    <a href="/mobile/vivo"><img src="/media/vivo-neon-logo.jpg" alt="" class="img-fluid"></a>
                    <a href="/mobile/apple"><img src="/media/iphone logo.jpg" alt="" class="img-fluid"></a>
                    <a href="/mobile/oppo"><img src="/media/oppo-mobile-logo.jpg" alt="" class="img-fluid"></a>
                    <a href="/mobile/realme"><img src="/media/realme logo.jpg" alt="" class="img-fluid"></a>  
                </div>  
            </div>
        </div>
    </section>

    <section id="filter">
        <div class="container">
            <div class="row mt-3 mx-auto">
                <div class="col-md-6 offset-md-3">
                    <h4 class="text-center">Search By Price</h4>
                    <a href="/mobile/sixtoten" id="but1"><button><span></span> ₹6000-₹10000</button></a>
                    <a href="/mobile/tentotwenty" id="but1"><button><span></span>₹10000-₹20000</button></a>
                    <a href="/mobile/twentytothirty" id="but1"><button><span></span>₹20000-₹30000</button></a>
                    <a href="/mobile/thirtyplus" id="but1"><button><span></span>₹30000+</button></a>
                </div>
            </div>
        </div>
    </section>
    
 <section id="mid">
    <div class="container">
        <div class="row">
            <%mobileRecord.forEach((result)=>{%>
                <div class="col-md-3">
                    <div class="card mx-auto" style="width: 18rem;">
                        <a href="/mobile/mobilesingledatd/<%=result.id%>">
                        <img src="/upload/<%=result.img%>" class="card-img-top d-flex mx-auto img-fluid" alt="...">
                        <div class="card-body">
                          <p class="card-text fw-bold"><%=result.brand%> <%=result.name%></p>
                          <p class="card-text"><%=result.ram%> <%=result.camera%></p>
                          <p class="card-text fw-bold">₹<%=result.price%></p>
                        </div>
                        </a>
                      </div>
                </div>
            <%})%>
        </div>
    </div>
</section>

    <%- include('../partials/footer.ejs')%>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

</body>
</html>