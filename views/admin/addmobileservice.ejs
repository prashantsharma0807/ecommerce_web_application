                    <input type="text" name="camera" id="" class="form-control">
                    <label for="" class="form-lable">Image</label>
                    <input type="file" name="img" id="" class="form-control">
                    <label for="" class="form-lable">Features</label>
                    <textarea name="features" id="" class="form-control"></textarea>
                    <button type="submit" class="form-control btn btn-success mt-2">Submit</button>
                </form>
            </div>
            <div class="col-md-2"></div>
        </div>
    </div>
