<body>

    <%- include('../../partials/admin/header.ejs')%> 

<section id="mid">
    <div class="container">
        <div class="row mt-2">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <h2>Add More Mobile Services</h2>
                <%=message%>
                <form action="" method="post" enctype="multipart/form-data">
                    <label for="" class="form-lable">Brand Name</label>
                    <input type="text" name="bname" id="" class="form-control">
                    <label for="" class="form-lable">Mobile Name</label>
                    <input type="text" name="mname" id="" class="form-control">
                    <label for="" class="form-lable">RAM</label>
                    <input type="text" name="ram" id="" class="form-control">
