<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
        <link rel="stylesheet" href="/admin/css/style.css">
    </head>
<body>

    <%- include('../../partials/admin/header.ejs')%> 

<section id="mid">
    <div class="container">
        <div class="row">
            <%- include('../../partials/admin/left.ejs')%> 
            <div class="col-md-9">
                <h2>Query Management</h2>
                    <table class="table table-hover">
                        <tr>
                            <th>S.No.</th>
                            <th>Email</th>
                            <th>Query</th>
                            <th>Action</th>
                            <th>Delete</th>
                        </tr>
                        <%record.forEach((result,key)=>{%>                   
                         <tr>
                            <td><%=key+1%></td>
                            <td><%=result.email%></td>
                            <td><%=result.query%></td>
                            <%if(result.status=='Reply'){%>
                            <td><a href="/admin/queryreplay/<%=result.id%>"><button class="btn btn-info"><%=result.status%></button></a></td>
                            <%}else{%>
                            <td><a href="/admin/queryreplay/<%=result.id%>"><button disabled><%=result.status%></button></a></td>
                            <%}%>
                            <td><a href="/admin/querydelete/<%=result.id%>"><button class="btn btn-outline-danger fs-5"><i class="bi bi-trash3"></i></button></a></td>
                        </tr>
                   <%})%>

                   <%if(!record.length){%>
                    <tr>
                        <td colspan="6"><h4 class="text-center">No Record Found</h4></td>
                    </tr>
                    <%}%> 
    
                    </table>
                

            </div>
        </div>
    </div>
</section>


<%- include('../../partials/admin/footer.ejs')%> 

</body>
</html>