<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
        <link rel="stylesheet" href="/admin/css/style.css">
    </head>
<body>

    <%- include('../../partials/admin/header.ejs')%> 

<section id="mid">
    <div class="container">
        <div class="row mt-3">
            <%- include('../../partials/admin/left.ejs')%> 
            <div class="col-md-10">
                <h2>Mobile Management</h2>
                <table class="table table-hover">
                    <tr>
                        <td>Total Record:<%=mobilerecordcount%></td>
                        <td>Publish:<%=publishrecordcount%></td>
                        <td>UnPublish:<%=unpublishrecordcount%></td>
                    </tr>
                </table>
                <a href="/admin/addmobileservice"><button class="btn btn-outline-success form-control">Add More Mobile Services</button></a>

               <table class="table table-hover">
                <tr>
                    <th>S.No</th>
                    <th>Brand</th>
                    <th>Name</th>
                    <th>Image</th>
                    <th>Price</th>
                    <th>Camera</th>
                    <th>RAM</th>
                    <th>Features</th>
                    <th>Update</th>
                    <th>Delete</th>
                    <th>Status</th>
                </tr>
                <%record.forEach((result,key)=>{%>
                    <tr>
                        <td><%=key+1%></td>
                        <td><%=result.brand%></td>
                        <td><%=result.name%></td>
                        <td><img src="/upload/<%=result.img%>" alt=""> </td>
                        <td><%=result.price%></td>
                        <td><%=result.camera%></td>
                        <td><%=result.ram%></td>
                        <td><%=result.features%></td>
                        <td><a href="/admin/mobileupdate/<%=result.id%>"><button class="btn btn-outline-warning">Update</button></a></td>
                        <td><a href="/admin/mobiledelete/<%=result.id%>"><button class="btn btn-outline-danger fs-5"><i class="bi bi-trash3"></i></button></a></td>                 
                       <%if(result.status=='publish'){%>
                            <td><a href="/admin/mobileststus/<%=result.id%>"><button class="btn btn-success"><%=result.status%></button></a></td>
                        <%}else{%>
                            <td><a href="/admin/mobileststus/<%=result.id%>"><button class="btn btn-danger"><%=result.status%></button></a></td>
                        <%}%>
                        </tr>
                <%})%>
                
               </table>

            </div>
        </div>
    </div>
</section>


<%- include('../../partials/admin/footer.ejs')%> 

</body>
</html>